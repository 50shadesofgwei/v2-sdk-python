{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "autopep8.args": [
    "--indent-size=2",
    "--max-line-length=80",
    "--ignore=E121"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}